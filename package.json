{
  "version": "1.0.0-alpha.0",
  "author": "Community for NL Design System",
  "description": "Design system based on the NL Design System architecture",
  "license": "EUPL-1.2",
  "name": "@example/design-system",
  "private": true,
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "workspaces": [
    "./documentation/",
    "./components/",
    "./components/*",
    "./packages/*",
    "./proprietary/*"
  ],
  "devDependencies": {
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "html-validate": "4.13.1",
    "husky": "4.3.0",
    "lerna": "4.0.0",
    "lint-staged": "10.5.1",
    "markdownlint-cli": "0.25.0",
    "npm-package-json-lint": "5.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.1",
    "webpack": "^4.44.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "npm-run-all --continue-on-error lint:**",
    "lint:css": "stylelint --allow-empty-input '**/*.css'",
    "lint:js": "eslint --no-error-on-unmatched-pattern '**/*.{js,jsx,ts,tsx}'",
    "lint:html": "find . -type d \\( -name node_modules \\) -prune -false -o -name '*.html' -print0 | xargs -0 npx html-validate",
    "lint:md": "markdownlint '**/*.md'",
    "lint:package-json": "npmPkgJsonLint --allowEmptyTargets '**/package.json'",
    "lint:prettier": "prettier --check .",
    "lint-fix": "npm-run-all --continue-on-error lint-fix:** prettier",
    "lint-fix:css": "stylelint --fix '**/*.css'",
    "lint-fix:js": "eslint --fix --no-error-on-unmatched-pattern '**/*.{js,jsx,ts,tsx}'",
    "lint-fix:md": "markdownlint --fix '**/*.md'",
    "prettier": "prettier --write .",
    "test": "exit 0"
  },
  "dependencies": {
    "http-server": "^0.12.3"
  }
}
